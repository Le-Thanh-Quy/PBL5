<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HelloActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PBL5 APP"
            android:fontFamily="sans-serif-black"
            android:textSize="33dp"
            android:textColor="#4AA84D"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText,SpUsage" />
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/imgabc"
                android:background="#9DBEDA"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/layout_seri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="sans-serif-black"
                android:hint="Mã sô seri két sắt"
                android:paddingHorizontal="40dp"
                android:singleLine="true"
                android:maxLength="15"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-90dp"
                android:layout_toEndOf="@+id/input_key"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                app:tint="#0FD112"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <EditText
                android:id="@+id/input_key_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã pin"
                android:maxLength="15"
                android:fontFamily="sans-serif-black"
                android:layout_marginHorizontal="50dp"
                android:paddingHorizontal="40dp"
                android:singleLine="true"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_check_pass"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-90dp"
                android:layout_toEndOf="@+id/input_key_pass"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                app:tint="#0FD112"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <EditText
                android:id="@+id/input_key_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tạo mã pin mới"
                android:maxLength="15"
                android:fontFamily="sans-serif-black"
                android:layout_marginHorizontal="50dp"
                android:paddingHorizontal="40dp"
                android:singleLine="true"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_check_new_pass"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-90dp"
                android:layout_toEndOf="@+id/input_key_new_pass"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                app:tint="#0FD112"
                android:visibility="invisible"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="#CDCDCD"
            android:backgroundTint="#989898"
            android:text="Agree and Continue"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</ScrollView>