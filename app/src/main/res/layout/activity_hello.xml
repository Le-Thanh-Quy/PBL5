<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HelloActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PBL5 APP"
            android:fontFamily="sans-serif-black"
            android:textSize="33dp"
            android:textColor="#4AA84D"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            tools:ignore="HardcodedText,SpUsage" />
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/welcome"
                android:scaleType="centerCrop"
                android:background="#9DBEDA"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/layout_serial"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:background="@drawable/edittext_border"
                android:fontFamily="sans-serif-black"
                android:hint="Mã số seri két sắt"
                android:maxLength="10"
                android:paddingHorizontal="40dp"
                android:paddingVertical="6dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/img_check_serial"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-105dp"
                android:layout_toEndOf="@+id/input_serial"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                android:visibility="invisible" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_pin"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <EditText
                android:id="@+id/input_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã pin"
                android:inputType="textPassword"
                android:background="@drawable/edittext_border"
                android:maxLength="10"
                android:paddingVertical="6dp"
                android:textSize="22dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginHorizontal="70dp"
                android:paddingHorizontal="40dp"
                android:singleLine="true"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_check_pin"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-105dp"
                android:layout_toEndOf="@+id/input_pin"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_new_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/input_new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:fontFamily="sans-serif-black"
                android:hint="Tạo mã pin mới"
                android:paddingVertical="6dp"
                android:background="@drawable/edittext_border"
                android:inputType="textPassword"
                android:textSize="22dp"
                android:maxLength="10"
                android:paddingHorizontal="40dp"
                android:singleLine="true"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_check_new_pin"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-105dp"
                android:layout_toEndOf="@+id/input_new_pin"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_check_24"
                android:visibility="invisible"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="#CDCDCD"
            android:backgroundTint="#989898"
            android:text="Agree and Continue"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</ScrollView>